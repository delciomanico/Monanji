# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=minint_complaints
DB_USER=app_user
DB_PASSWORD=app_password

# JWT Configuration
JWT_SECRET=minint_secure_jwt_secret_2024_development_only
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_COMPLAINT=10

# API Configuration
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
ANONYMOUS_RATE_LIMIT=5

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info

# SMS/Email Configuration (optional)
SMS_PROVIDER=
SMS_API_KEY=
EMAIL_PROVIDER=
EMAIL_API_KEY=

# Development Settings
ENABLE_CORS=true
ENABLE_LOGGING=true
